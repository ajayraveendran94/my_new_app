<%= form_with(model: @post, local: true) do |f| %>
  <% if @post.errors.any? %>
	<div id="error_explanation">
		<h3>
			<%= pluralize(@post.errors.count, "error") %>
			prohibited this article from being saved:
		</h3>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
				<% end %>
			</li>
		</ul>
	</div>
  <% end %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %> <br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :mobile %> <br>
    <%= f.text_field :mobile %>
  </p>
  <p>
    <%= f.label :post %> (Minimum 10 Characters)<br>
    <%= f.text_area :post %>
  </p>
  <p>
    <%= f.submit  class: "btn btn-primary"%> 
  </p>
<% end %>