<% @posts.each do|post| %>
  <!-- Email : <%= post.email %> <br>
  Mobile : <%= post.mobile %> <br> -->
  "<%= post.post %>"<br>
  Post By: <i> <%= post.name %> </i><br>

  <%= link_to 'Click to get details', post_path(post) %> 
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are You Sure'} %><br> <br>
<% end %>
<span>
  <%= link_to 'New Post', controller: 'posts', action: 'new' %> 
