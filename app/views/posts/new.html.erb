<h1>Signup Here</h1>
<%= form_with scope: :post, url:posts_path, local: true do |f| %>
<p>
<%= f.label :name %> <br>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :email %> <br>
<%= f.email_field :email %>
</p>
<p>
<%= f.label :mobile %> <br>
<%= f.number_field :mobile %>
</p>
<p>
<%= f.label :address %> <br>
<%= f.text_area :address %>
</p>
<p>
<%= f.submit %> 
</p>
<% end %>